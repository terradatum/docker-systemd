  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/docker-entrypoint.sh",
      "destination": "/"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/etc/systemd/journald.conf",
      "destination": "/etc/systemd/journald.conf"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y systemd systemd-sysv snapd fuse squashfuse locales",
        "apt-get clean",
        "rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*",
        "locale-gen en_US.UTF-8"
      ],
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "SNAPCRAFT_SETUP_CORE=1"
      ],
      "execute_command": "sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "bionic",
        "xenial"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "yum update -y",
        "yum install -y glibc-common glibc-locale-source glibc-langpack-en",
        "yum clean all",
        "localedef -i en_US -f UTF-8 en_US.UTF-8"
      ],
      "execute_command": "sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "centos7",
        "centos8"
      ]
    }
  ],
